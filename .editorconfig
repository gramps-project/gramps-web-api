# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab
